{
    "name": "caf_deploy",
    "description": "Cloud Assistants lib for deploying apps or services in Mesos/Marathon or Kubernetes",
    "version": "0.3.2",
    "author": "Antonio Lain <antlai@cafjs.com>",
    "dependencies": {
        "caf_core": "^0.3.0",
        "request" : "^2.58.0",
        "mustache": "^3.1.0",
        "kubernetes-client": "^5.3.1",
        "js-yaml": "^3.12.0"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "nodeunit" : ">=0.9",
        "jsdoc": "^3.4.2"
    },
    "main": "index",
    "homepage": "http://www.cafjs.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/cafjs/caf_deploy.git"
    },
    "scripts": {
        "test": "node ./node_modules/.bin/nodeunit",
        "eslint" : "./node_modules/.bin/eslint -c .eslintrc.js .",
        "eslintfix" : "./node_modules/.bin/eslint -c .eslintrc.js --fix .",
        "docs" : "rm -fr docs; mkdir -p docs; ./node_modules/.bin/jsdoc --pedantic -c ./conf.json -d docs lib/*.js --readme ./README.md --package ./package.json"
    },
  "engines": { "node": ">= 0.10.29 " }
}
